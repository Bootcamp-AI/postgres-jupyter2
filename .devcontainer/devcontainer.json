{
  "name": "Mi Entorno de Datos",
  "image": "mcr.microsoft.com/devcontainers/python:3.10",
  "features": {
    // Instalamos PostgreSQL
    "ghcr.io/devcontainers/features/postgres:1": {
      "version": "latest",
      "username": "postgres",
      "password": "password", 
      "dbName": "postgres"
    }
  },
  // Opcional: Instalar librerías de Python automáticamente
  "postCreateCommand": "pip install pandas sqlalchemy psycopg2-binary ipykernel"
}